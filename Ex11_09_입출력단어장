import java.io.BufferedReader;
import java.io.BufferedWriter;
import java.io.FileReader;
import java.io.FileWriter;
import java.io.IOException;
import java.io.InputStreamReader;
import java.util.Scanner;

public class Ex11_09_내이름 {
	public static void main(String[] args) throws IOException { //예외처리 메인메서드로 떠넘김

		Scanner sc = new Scanner(System.in);
		int input;
		BufferedReader br = null;
		BufferedReader br2 = null;
		BufferedWriter bw = null;
		String str;
		boolean flag = false;
		
		while(true) {
			flag = false;
			System.out.print("1.단어입력 2.단어검색 3.종료 >>");
			input = sc.nextInt();
			switch(input) {
			case 1:
				System.out.print("단어/뜻 입력>>");
				br = new BufferedReader(new InputStreamReader(System.in)); //키보드와의 연결다리
				str = br.readLine();//blue sky/푸른 하늘 //공백입력가능
				
				bw = new BufferedWriter(new FileWriter("c:\\sun\\voca.txt",true) ); //연결다리
				//파일 안만들어져 있으면 만들어 짐
				//false 기존에 있던 것 싹 지운 후 입력 / 기본 설정으로 되어있음
				//true 기존에 있던 것에 추가
				bw.write("c:\\sun\\voca.txt");
				bw.newLine(); //엔터
				bw.flush();
				break; 
			case 2: 
				System.out.print("검색 단어 입력>>");
				br = new BufferedReader(new InputStreamReader(System.in));
				str = br.readLine(); //blue sky
				
				br2 = new BufferedReader(new FileReader("c:\\sun\\voca.txt")); //파일에서 읽어오기 위한 연결다리
				String line;
				while((line = br2.readLine())!=null) {
					String[] tokens = line.split("/");
					if(tokens[0].equals(str)) {
						System.out.println("단어>"+tokens[0]);
						System.out.println("단어의 뜻>"+tokens[1]);
						flag = true;
					}
				}
				if(flag==false) {
					System.out.println("찾는 단어 없음");
				}
				break;
			case 3: 
				System.out.println("프로그램을 종료합니다.");
				br.close();
				bw.close();
				br2.close();
				System.exit(0);
				break;
			default :
				System.out.println("1~3만 입력 가능");
				
			}//switch
		}//while
	}
}
/*
1.단어입력 2.단어검색 3.종료
>>1
단어/뜻 입력>>hand/손
1.단어입력 2.단어검색 3.종료

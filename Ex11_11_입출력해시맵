import java.io.BufferedReader;
import java.io.FileInputStream;
import java.io.IOException;
import java.io.InputStreamReader;
import java.util.HashMap;
import java.util.Set;
import java.util.StringTokenizer;

public class Ex11_11_박이랑 {

	public static void main(String[] args) {

		//		파일입출력
		//		한줄씩 EOF만날때까지 읽어들이기
		//		line stringtokenizer 또는 split으로 잘라내고
		//		hashmap에 넣기
		
//		FileInputStream is = null;
//		InputStreamReader ir = null;
		BufferedReader br = null;
		String str, word;
		int i = 1;
		StringTokenizer stn;
		HashMap<String,Integer> hm = new HashMap<String,Integer>();
		
		try {
//			is = new FileInputStream("lyrics.txt");
//			ir = new InputStreamReader(is);
//			br = new BufferedReader(ir);
			br = new BufferedReader(new InputStreamReader(new FileInputStream("lyrics.txt")));
			
				while(true){
					str = br.readLine();
					if(str==null)
						break;
					else {
						stn = new StringTokenizer(str); //구분자 따로 안쓰면 공백이 구분자
						while(stn.hasMoreTokens()) {
							word = stn.nextToken();
							if(hm.get(word)==null) {
								hm.put(word,i);
							}else {
								i = hm.get(word);
								i++;
								hm.put(word,i);
							}
						}
					}
					
				}
			}catch (IOException e) {
				e.printStackTrace();
			}finally {
				try {
					br.close();
				} catch (IOException e) {
					e.printStackTrace();
				}
			}
			
			Set<String> set = hm.keySet();
			for(String x : set) {
				System.out.println(x+":"+hm.get(x));
			}

		

	}

}

